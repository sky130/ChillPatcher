<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net472</TargetFramework>
    <LangVersion>latest</LangVersion>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    <CopyLocalLockFileAssemblies>false</CopyLocalLockFileAssemblies>
    <AssemblyName>ChillPatcher</AssemblyName>
    <OutputPath>bin\</OutputPath>
  </PropertyGroup>

  <ItemGroup>
    <!-- Exclude game source files -->
    <Compile Remove="Assembly-CSharp\**" />
    <Compile Remove="Unity.TextMeshPro\**" />
    <EmbeddedResource Remove="Assembly-CSharp\**" />
    <EmbeddedResource Remove="Unity.TextMeshPro\**" />
    <None Remove="Assembly-CSharp\**" />
    <None Remove="Unity.TextMeshPro\**" />
  </ItemGroup>

  <ItemGroup>
